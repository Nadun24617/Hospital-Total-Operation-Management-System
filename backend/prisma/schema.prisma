generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  STAFF
  DOCTOR
  NURSE
  USER
}

enum UserStatus {
  PENDING
  ACTIVE
  SUSPENDED
}

model User {
  id           String     @id @default(cuid()) @db.VarChar(36)
  firstName    String     @db.VarChar(50)
  lastName     String     @db.VarChar(50)
  email        String     @unique @db.VarChar(255)
  phone        String     @unique @db.VarChar(20)
  passwordHash String     @db.VarChar(191)
  role         UserRole   @default(USER)
  status       UserStatus @default(PENDING)
  isConfirmed  Boolean    @default(false)
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  doctor       Doctor?
  appointments Appointment[]
}

model Doctor {
  id               Int       @id @default(autoincrement()) @map("doctor_id")
  userId           String    @unique @db.VarChar(36) @map("user_id")
  fullName         String    @db.VarChar(150) @map("full_name")
  slmcNumber       String    @unique @db.VarChar(50) @map("slmc_number")
  specializationId Int       @map("specialization_id")
  phone            String?   @db.VarChar(20)
  email            String?   @db.VarChar(100)
  description      String?   @db.Text
  joinedDate       DateTime? @db.Date @map("joined_date")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user         User          @relation(fields: [userId], references: [id])
  appointments Appointment[]
}

enum AppointmentStatus {
  UPCOMING
  COMPLETED
  CANCELLED
}

model Appointment {
  id              Int               @id @default(autoincrement()) @map("appointment_id")
  doctorId        Int               @map("doctor_id")
  userId          String?           @db.VarChar(36) @map("user_id")
  patientName     String            @db.VarChar(150) @map("patient_name")
  contactNumber   String            @db.VarChar(20) @map("contact_number")
  reason          String?           @db.Text
  appointmentType String            @db.VarChar(50) @map("appointment_type")
  date            DateTime          @db.Date
  timeSlot        String            @db.VarChar(10) @map("time_slot")
  queueNumber     Int               @map("queue_number")
  status          AppointmentStatus @default(UPCOMING)
  createdAt       DateTime          @default(now()) @map("created_at")
  updatedAt       DateTime          @updatedAt @map("updated_at")

  doctor Doctor @relation(fields: [doctorId], references: [id])
  user   User?  @relation(fields: [userId], references: [id])
}
