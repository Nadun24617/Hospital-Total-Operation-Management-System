generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  STAFF
  DOCTOR
  NURSE
  USER
}

enum UserStatus {
  PENDING
  ACTIVE
  SUSPENDED
}


model User {
  id           String     @id @default(cuid()) @db.VarChar(36)
  firstName    String     @db.VarChar(50)
  lastName     String     @db.VarChar(50)
  email        String     @unique @db.VarChar(255)
  phone        String     @unique @db.VarChar(20)
  passwordHash String     @db.VarChar(191)
  role         UserRole   @default(USER)
  status       UserStatus @default(PENDING)
  isConfirmed  Boolean    @default(false)
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  doctor       Doctor?
  appointments Appointment[]

  labRequestsCreated   LabRequest[] @relation("LabRequestDoctor")
  labRequestsAsPatient LabRequest[] @relation("LabRequestPatient")
  labRequestsHandled   LabRequest[] @relation("LabRequestTechnician")
}


model Doctor {
  id               Int       @id @default(autoincrement()) @map("doctor_id")
  userId           String    @unique @db.VarChar(36) @map("user_id")
  fullName         String    @db.VarChar(150) @map("full_name")
  slmcNumber       String    @unique @db.VarChar(50) @map("slmc_number")
  specializationId Int       @map("specialization_id")
  phone            String?   @db.VarChar(20)
  email            String?   @db.VarChar(100)
  description      String?   @db.Text
  joinedDate       DateTime? @db.Date @map("joined_date")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user         User          @relation(fields: [userId], references: [id])
  appointments Appointment[]
}

enum AppointmentStatus {
  UPCOMING
  COMPLETED
  CANCELLED
}

enum LabRequestStatus {
  PENDING
  SAMPLE_COLLECTED
  COMPLETED
}

model Appointment {
  id              Int               @id @default(autoincrement()) @map("appointment_id")
  doctorId        Int               @map("doctor_id")
  userId          String?           @db.VarChar(36) @map("user_id")
  patientName     String            @db.VarChar(150) @map("patient_name")
  contactNumber   String            @db.VarChar(20) @map("contact_number")
  reason          String?           @db.Text
  appointmentType String            @db.VarChar(50) @map("appointment_type")
  date            DateTime          @db.Date
  timeSlot        String            @db.VarChar(10) @map("time_slot")
  queueNumber     Int               @map("queue_number")
  status          AppointmentStatus @default(UPCOMING)
  createdAt       DateTime          @default(now()) @map("created_at")
  updatedAt       DateTime          @updatedAt @map("updated_at")

  doctor Doctor @relation(fields: [doctorId], references: [id])
  user   User?  @relation(fields: [userId], references: [id])

  labRequests LabRequest[]

  @@index([userId])
  @@index([doctorId, date])
}

model LabRequest {
  id               Int              @id @default(autoincrement()) @map("lab_request_id")
  code             String           @unique @db.VarChar(32) @map("code")
  doctorUserId     String           @db.VarChar(36) @map("doctor_user_id")
  patientUserId    String?          @db.VarChar(36) @map("patient_user_id")
  technicianUserId String?          @db.VarChar(36) @map("technician_user_id")
  appointmentId    Int?             @map("appointment_id")
  patientName      String           @db.VarChar(150) @map("patient_name")
  status           LabRequestStatus @default(PENDING)
  technicianName   String?          @db.VarChar(150) @map("technician_name")
  createdAt        DateTime         @default(now()) @map("created_at")
  sampleCollectedAt DateTime?       @map("sample_collected_at")
  completedAt      DateTime?        @map("completed_at")

  doctorUser      User         @relation("LabRequestDoctor", fields: [doctorUserId], references: [id])
  patientUser     User?        @relation("LabRequestPatient", fields: [patientUserId], references: [id])
  technicianUser  User?        @relation("LabRequestTechnician", fields: [technicianUserId], references: [id])
  appointment     Appointment? @relation(fields: [appointmentId], references: [id])
  tests           LabRequestTest[]

  @@index([doctorUserId])
  @@index([patientUserId])
  @@index([appointmentId])
  @@index([status])
}

model LabRequestTest {
  id            Int      @id @default(autoincrement()) @map("lab_request_test_id")
  labRequestId  Int      @map("lab_request_id")
  testName      String   @db.VarChar(120) @map("test_name")
  resultValue   String?  @db.VarChar(100) @map("result_value")
  resultRemarks String?  @db.Text @map("result_remarks")
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")

  labRequest LabRequest @relation(fields: [labRequestId], references: [id], onDelete: Cascade)

  @@index([labRequestId])
  @@unique([labRequestId, testName])
}
